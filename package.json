{
  "name": "akrasia-metalsmith",
  "version": "1.0.0",
  "description": "Blog, Portfolio and Gallery of Sebastian Senf",
  "main": "index.js",
  "author": "Sebastian Senf <me@akrasia.me>",
  "scripts": {
    "build:posts": "node lib/posts.js",
    "build:pages": "node lib/pages.js",
    "build:scripts": "node lib/scripts.js",
    "build:styles": "node lib/styles.js",
    "build:assets": "node lib/assets.js",
    "build:pictures": "node lib/pictures.js",
    "build": "yarn run clean && yarn run build:posts && yarn run build:pages && yarn run build:scripts && yarn run build:styles && yarn run build:assets && yarn run build:pictures",
    "watch:posts": "node lib/posts.js --watch",
    "watch:pages": "node lib/pages.js --watch",
    "watch:scripts": "node lib/scripts.js --watch",
    "watch:styles": "node lib/styles.js --watch",
    "watch:assets": "node lib/assets.js --watch",
    "watch": "yarn run watch:posts & yarn run watch:pages & yarn run watch:scripts & yarn run watch:styles & yarn run watch:assets",
    "clean": "rm -rf ./www",
    "serve": "browser-sync start --serveStatic www --files=\"www/**/*.html, www/**/*.css, www/**/*.js\" --port 9999 --no-notify --no-open",
    "start": "yarn run watch & yarn run serve"
  },
  "license": "Private",
  "dependencies": {
    "async": "^2.1.2",
    "autoprefixer-stylus": "^0.11.0",
    "babel-preset-es2015": "^6.18.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.17.5",
    "browserify": "^13.1.1",
    "bulma": "^0.2.3",
    "cash-dom": "^1.3.5",
    "ejs": "^2.5.2",
    "lwip": "^0.0.9",
    "metalsmith": "^2.2.2",
    "metalsmith-assets": "^0.1.0",
    "metalsmith-clean-css": "^5.0.0",
    "metalsmith-collections": "^0.7.0",
    "metalsmith-date-formatter": "^1.0.2",
    "metalsmith-excerpts": "^1.1.0",
    "metalsmith-feed-atom": "^1.0.0",
    "metalsmith-html-minifier": "^2.2.0",
    "metalsmith-if": "^0.1.1",
    "metalsmith-ignore": "^0.1.2",
    "metalsmith-layouts": "^1.6.5",
    "metalsmith-markdown": "^0.2.1",
    "metalsmith-metallic": "^2.0.1",
    "metalsmith-move-remove": "^0.0.1",
    "metalsmith-permalinks": "^0.5.0",
    "metalsmith-stylus": "^2.0.1",
    "metalsmith-uglify": "^1.5.1",
    "metalsmith-watch": "^1.0.3"
  }
}
