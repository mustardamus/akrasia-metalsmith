#post
  code
    font-family: 'Inconsolata', monospace
  
  pre
    border: 10px solid #DCE0E6
    border-radius: 2px
    margin-bottom: 20px

    code
      padding: 20px
      box-shadow: inset 0 0 10px black
      font-size: 1em
      border-radius: 2px
  
  p
    font-size: 1.3em
    
    code
      font-size: 1em
    
  a
    border-bottom: 2px solid #2B4C7E
    color: #1F1F20
    padding: 0 3px
    border-radius: 2px
    background: transparent
    transition: all 0.4s ease-out
    transition-property: background color

    &:hover
      background: #567EBB
      color: white
      text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.2)
  
  img
    border: 10px solid #DCE0E6
    border-radius: 2px
    margin-bottom: 20px
  
  ul
    font-size: 1.2em
