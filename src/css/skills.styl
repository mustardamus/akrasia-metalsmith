#skills
  .intro
    border-bottom: 3px solid #DCE0E6
    padding-bottom: 20px
    margin-bottom: 20px

    .button
      background: #DCE0E6
      border: none
      font-size: 0.9em
      margin-bottom: 5px
      transition: all 0.4s ease-out
      transition-property: background color

      &:hover
        background: #567EBB
        color: white

        svg
          fill: rgba(255, 255, 255 0.6)
      
      svg
        fill: rgba(0, 0, 0, 0.6)
        transition: fill 0.4s ease-out

    p
      font-size: 1.3em
      margin-bottom: 18px
    
    .tldr
      margin-top: 100px
      background: #2B4C7E
      font-size: 1.1em
      padding: 10px
      border-radius: 2px
      color: white
      text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.2)
      cursor: default
      transform: rotate(5deg)
  
  p a, li a, h3 a
    border-bottom: 2px solid #2B4C7E
    color: #1F1F20
    padding: 0 3px
    border-radius: 2px
    background: transparent
    transition: all 0.4s ease-out
    transition-property: background color

    &:hover
      background: #567EBB
      color: white
      text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.2)
  
  .projects
    h3
      font-size: 2em
      margin-top: 30px
    
    p
      font-size: 1.1em
      margin-bottom: 18px
    
    ul
      border-left: 2px solid #DCE0E6
      margin-left: 10px
      padding-left: 10px
      
      li
        margin-bottom: 6px
