#home
  a
    border-bottom: 2px solid #2B4C7E
    color: #1F1F20
    padding: 0 3px
    border-radius: 2px
    background: transparent
    transition: all 0.4s ease-out
    transition-property: background color

    &:hover
      background: #567EBB
      color: white
      text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.2)

  .intro
    img
      margin-top: 30px

    p
      font-size: 1.38em
      margin-bottom: 18px

      &:last-child
        margin-bottom: 0
  
  .quick-contact
    padding: 10px 0
    margin-bottom: 20px
    border-bottom: 3px solid #DCE0E6

    a
      border: none

      svg
        width: 40px
        height: 40px
        fill: #2B4C7E
        transition: fill 0.2s ease-in-out
      
      &:hover
        border: none
        background: none

        svg
          fill: #567EBB

@media only screen and (max-width: 768px)
  #home
    .intro
      .column.is-3
        text-align: center
      
      img
        margin-top: 0
        
